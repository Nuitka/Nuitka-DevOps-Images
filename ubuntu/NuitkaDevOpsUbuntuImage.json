{
    "type": "Microsoft.VirtualMachineImages/imageTemplates",
    "apiVersion": "2020-02-14",
    "location": "<region1>",
    "dependsOn": [],
    "tags": {
            "imagebuilderTemplate": "NuitkaDevOpsUbuntuImage",
            "userIdentity": "enabled"
        },
        "identity": {
            "type": "UserAssigned",
            "userAssignedIdentities": {
                "<imgBuilderId>": {}
            }
        },
    "properties": {

        "buildTimeoutInMinutes" : 100,

        "vmProfile": 
                {
                "vmSize": "Standard_DS2_v2",
                "osDiskSizeGB": 127
                },
        
        "source": {
            "type": "PlatformImage",
                "publisher": "Canonical",
                "offer": "0001-com-ubuntu-server-jammy",
                "sku": "22_04-lts-gen2",
                "version": "latest"
            
        },
        "customize": [
            {
                "type": "Shell",
                "name": "updateSystem",
                "inline": [
                    "sudo apt -y update",
                    "sudo DEBIAN_FRONTEND=noninteractive apt -y upgrade"
                ]
            },
            {
                "type": "Shell",
                "name": "installPrereqs",
                "inline": [
                    "sudo add-apt-repository ppa:deadsnakes/ppa -y",
                    "sudo DEBIAN_FRONTEND=noninteractive apt -y install build-essential clang python3.11 python3.11-dev python3-dev python3-pip python2.7-dev patchelf ccache lldb tk-dev tcl-dev pkg-config libgirepository1.0-dev dfghdrhvtr",
                    "curl -sS https://bootstrap.pypa.io/get-pip.py | python3.11",
                    "sudo mkdir -p -m 755 /etc/apt/keyrings && wget -qO- https://cli.github.com/packages/githubcli-archive-keyring.gpg | sudo tee /etc/apt/keyrings/githubcli-archive-keyring.gpg > /dev/null && sudo chmod go+r /etc/apt/keyrings/githubcli-archive-keyring.gpg && echo \"deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main\" | sudo tee /etc/apt/sources.list.d/github-cli.list > /dev/null && sudo apt update && sudo DEBIAN_FRONTEND=noninteractive apt install gh -y"
                ]
            }
        ],
        "distribute": 
            [
                {
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                    "runOutputName": "<runOutputName>",
                    "targetRegions": [
                        {
                            "name": "<region1>",
                            "replicaCount": 1,
                            "storageAccountType": "Standard_LRS"
                        },
                        {
                            "name": "<region2>",
                            "replicaCount": 1,
                            "storageAccountType": "Standard_LRS"
                        }
                    ],
                    "artifactTags": {
                        "source": "azVmImageBuilder",
                        "baseosimg": "ubuntu"
                    }
                }
            ]
        }
}

